<% if (comment.user_id === author_id) { %>

<div class="justify-start flex-col items-start w-full flex gap-2">
  <div
    class="m-4 mb-1 border-2 border-black rounded relative drop-shadow-2xl <%= comment.bgcolor %> text-white sm:w-3/4 md:w-2/4 w-full break-words p-2 px-4"
  >
    <div class="p-2"><%= comment.comment%></div>
    <div class="absolute right-1 bottom-0 text-xs text-slate-800">
      <%= comment.date.monthName %> <%= comment.date.day %> |
      <span class="">
        <%= comment.date.hour %>:<%= comment.date.minute %>
      </span>
    </div>
    <div class="absolute bottom-0 left-0 translate-y-full translate-x-1/4">
      <%- include('./authorCommentIcon') %>
    </div>
  </div>
  <div class="w-16 -translate-x-1/4 relative">
    <%- include('./authorProfile') %>
    <div
      class="absolute left-0 -bottom-5 text-blue-600 border-2 bg-white font-bold px-1 rounded text-xs"
    >
      OP
    </div>
  </div>
</div>

<% } else { %>
<div class="justify-end flex-col items-end w-full flex">
  <div
    class="m-4 mb-1 rounded relative <%= comment.bgcolor %> border-2 border-black text-white sm:w-3/4 md:w-2/4 break-words p-2"
  >
    <div class="p-4"><%= comment.comment %></div>
    <div class="absolute right-1 bottom-0 text-xs text-slate-900 opacity-50">
      <%= comment.date.monthName %> <%= comment.date.day %> | <%=
      comment.date.hour %>:<%= comment.date.minute %>
    </div>
    <div class="absolute -bottom-0 right-0 translate-y-full -translate-x-1/4">
      <%- include('./userCommentIcon') %>
    </div>
  </div>
  <div class="w-16 translate-x-1/4 mt-6">
    <% console.log(comment); %> <%- include('userProfilePhoto', {comment:
    {...comment}}) %>
  </div>
</div>
<% } %>
