<div class="">
  <label for="title" class="font-semibold text-lg">Thoughtbox</label>
  <form action="/post/new" method="POST">
    <div class="flex flex-col gap-2">
      <input
        type="text"
        required
        maxlength="32"
        name="title"
        id="title"
        placeholder="Post Title"
        class="font-medium border rounded-sm bg-white drop-shadow-2xl"
      />
      <textarea
        required
        maxlength="256"
        name="post"
        id="post"
        cols="20"
        rows="5"
        class="border rounded-sm resize-none drop-shadow-2xl bg-white"
        placeholder="what up homie?"
      ></textarea>
      <button
        type="submit"
        class="cursor-pointer ring-2 ring-green-400 p-2 border-b-green-500 border-none rounded shadow drop-shadow-md transition-colors bg-white hover:bg-emerald-400 hover:border-transparent"
      >
        Post It Up
      </button>
    </div>
  </form>
</div>
