<div class="">
  <div class="text-2xl">Want to be an author?</div>
  <div class="flex justify-center gap-8 p-2">
    <button
      id="secret-button"
      class="border bg-white hover:bg-emerald-500 hover:text-white transition-colors cursor-pointer p-2 rounded-sm text-emerald-500 border-black shadow-lg drop-shadow-lg"
    >
      Yes
    </button>
    <button
      id="jerk-button"
      class="border bg-white cursor-not-allowed p-2 rounded-xs shadow-lg drop-shadow-lg text-gray-600 border-black"
    >
      I'm Jerk
    </button>
  </div>
</div>
<script>
  const secretBtn = document.getElementById("secret-button");
  const jerkBtn = document.getElementById("jerk-button");
  const secretForm = document.getElementById("secret-form");
  const jerkForm = document.getElementById("jerk-form");
  const overlay = document.getElementById("overlay");
  const modal = document.getElementById("modal");

  const level1 = document.getElementById("level-1");
  const level2 = document.getElementById("level-2");
  const level3 = document.getElementById("level-3");
  const exitFormBtn = document.getElementById("exit-form");

  const question1 = document.getElementById("question-1");
  const question2 = document.getElementById("question-2");
  const question3 = document.getElementById("question-3");

  secretForm.classList.add("hidden");
  jerkForm.classList.add("hidden");

  level1.addEventListener("click", (e) => {
    question1.classList.add("hidden");
    question2.classList.remove("hidden");
    question2.classList.add("flex");
  });
  level2.addEventListener("click", (e) => {
    question2.classList.add("hidden");
    question2.classList.remove("flex");
    question3.classList.add("flex");
    question3.classList.remove("hidden");
  });

  secretBtn.addEventListener("click", (e) => {
    secretForm.classList.remove("hidden");
    overlay.classList.remove("hidden");
    modal.classList.remove("hidden");
    document.body.classList.add("overflow-hidden");
  });

  jerkBtn.addEventListener("click", (e) => {
    question1.classList.remove("hidden");
    question2.classList.add("hidden");
    question3.classList.add("hidden");

    jerkForm.classList.remove("hidden");
    overlay.classList.remove("hidden");
    modal.classList.remove("hidden");
    document.body.classList.add("overflow-hidden");
  });

  overlay.addEventListener("click", (e) => {
    secretForm.classList.add("hidden");
    jerkForm.classList.add("hidden");
    overlay.classList.add("hidden");
    modal.classList.add("hidden");
    document.body.classList.remove("overflow-hidden");
  });

  exitFormBtn.addEventListener("click", (e) => {
    secretForm.classList.add("hidden");
    jerkForm.classList.add("hidden");
    overlay.classList.add("hidden");
    modal.classList.add("hidden");
    document.body.classList.remove("overflow-hidden");
  });
</script>
